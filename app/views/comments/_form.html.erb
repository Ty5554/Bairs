<div class="mb-3" id="comment-form">
  <div class="lg:w-2/3 lg:mx-auto">
    <%= form_with model: comment, url: board_comments_path(board), class: "space-y-4" do |f| %>
      <div>
        <%= f.label :body, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :body, class: "form-textarea mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", rows: "4", placeholder: Comment.human_attribute_name(:body) %>
      </div>
      <div class="flex justify-center">
        <%= f.submit 'コメント投稿', class: "text-yellow-400 hover:text-white border border-yellow-400 transition hover:bg-yellow-500 duration-300 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-2xl px-5 py-2.5 text-center me-2 mb-2 dark:border-yellow-200 dark:text-yellow-200 dark:hover:text-white dark:hover:bg-yellow-400 dark:focus:ring-yellow-900" %>
      </div>
    <% end %>
  </div>
</div>
