<tr id="comment-<%= comment.id %>" class="border-b">
  <!-- 画像表示部分 -->
  <td class="w-16">
    <%= image_tag "sample.png", class: "w-12 h-12 rounded-full" %>
  </td>
  
  <!-- コメント本文とユーザー名 -->
  <td class="pl-4">
    <p class="text-gray-700 mt-1"><%= simple_format(comment.body) %></p>
  </td>

  <!-- アクションボタン -->
  <% if current_user.own?(comment) %>
    <td class="text-right">
      <ul class="inline-flex space-x-2">
        <!-- 編集ボタン -->
        <li>
          <%= link_to "#", class: "edit-comment-link" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-500 hover:text-gray-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 20h9" />
              <path d="M16.5 3.5a2.121 2.121 0 1 1 3 3L7 19.5 3 21l1.5-4L16.5 3.5z" />
            </svg>
          <% end %>
        </li>
        <!-- 削除ボタン -->
        <li>
          <%= link_to "#", class: "delete-comment-link" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-red-500 hover:text-red-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 6h18" />
              <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6" />
              <path d="M10 11v6" />
              <path d="M14 11v6" />
              <path d="M9 6V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2" />
            </svg>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>
